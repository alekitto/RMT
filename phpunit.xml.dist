<?xml version="1.0" encoding="UTF-8"?>

<phpunit colors="true" bootstrap="autoload.php">

    <testsuites>
        <testsuite name="RMT Unit test suite">
            <directory suffix="Test.php">./test/Unit</directory>
        </testsuite>
        <testsuite name="RMT Functional test suite">
            <directory suffix="Test.php">./test/Functional</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="junit" target="build/logs/junit.xml" />
    </logging>

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
</phpunit>
